---
import logo from "../images/logo.svg";
const navigations = ["showcase", "docs", "themes", "integrations", "blog"];
---

<header class="header bg-black h-20 flex justify-center">
  <div class="container flex justify-between max-w-7xl items-center">
    <div class="logo flex items-center justify-center">
      <a href="index.html">
        <img class="w-44" src={logo} alt="" />
      </a>
    </div>
    <nav class="w-2/4">
      <ul class="flex text-yellow-100 justify-end uppercase">
        {
          navigations.map((links) => (
            <a href="#">
              <li class="hover:text-white hover:bg-slate-400 px-6 py-3 rounded-full">
                {links}
              </li>
            </a>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
